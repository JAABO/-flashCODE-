<!-- this is the sign_in.handlebars file inside the users folder of the views folder
views/users/sign_in.handlebars -->
<center>
  <h2>Sign in</h2>
  <form class="create-update-form" action="/users/login" method="POST">
    <div class="form-group">
      <h2>
        <label for="email">Email:</label></h2>
        <span>
          <input type="text" id="email" name="email">
        </span>
      
  
    </div>
  
    <div class="form-group">
      <h2>
        <label for="pass">Password:</label></h2>
        <span>
          <input type="password" id="pass" name="password">
        </span>
      
    </div>
  
    <a id="signin" class="btn btn-warning btn-lg" role='button' type="submit">Sign in</a>
  </form>

</center>